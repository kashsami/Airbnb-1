<% layout("/layouts/boilerplate") %>

<div class="row"> 
  <div class="col-8 offset-2 "> 
    <br><br>
 <body>
  <h3><b>Edit Your Listings</b></h3>
<form method="POST" action="/listings/<%= listing._id %>?_method=PUT" 
  novalidate class=" needs-validation" >

<div class="mb-3">    
    <label for="title"
     class="from-label">Title</label>
    <input name="listing[title]" 
    value="<%= listing.title %>"
     type="text" 
     class="form-control"
   required  />
   <div class="valid-feedback">Title Looks good!</div>
</div>
   
<div class="mb-3">  
    <label for="description"
     class="from-label">description</label>
    <textarea name="listing[description]"
    class="form-control"  required ><%= listing.description %></textarea>
</div>
    
<div class="mb-3"> 
    <label for="image"
     class="from-label">Image</label>
    <input name="listing[image]" 
    value="<%= listing.image %>" 
    type="text"  
    class="form-control"
    required   />
</div>

<div class="mb-3 col-md-4"> 
  <label for="price"
  class="from-label">price</label>
  <input name="listing[price]"
   value="<%= listing.price %>" 
   type="number" 
    class="form-control" 
    required  />
    <div class="invalid-feedback">Pleace enter a valid price!</div>
</div>
    
<div class="mb-3 col-md-8">
<div class="mb-3"> 
  <label for="location"
  class="from-label">location</label>
  <input name="listing[location]"
  value="<%= listing.location %>"
  type="text" 
  class="form-control" 
  required />
  <div class="invalid-feedback">enter correct location!</div>
</div>
</div>

<div class="mb-3"> 
  <label for="country" 
  class="from-label">country</label>
  <input name="listing[country]" 
  value="<%= listing.country %>" 
   type="text" 
   class="form-control" 
   required  />
   <div class="invalid-feedback">correct country name!</div>
</div>

  
   <button class="btn btn-dark edit-btn mt-3"><b>Edit</b></button>
  </form>
  <br><br>
</body>
</div>
</div>
